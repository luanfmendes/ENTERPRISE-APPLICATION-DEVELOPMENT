@model  IList<Imovel>

@{
    ViewData["Title"] = "Listar";
}

<h1>Imóveis</h1>

<form asp-action="listar" method="get" class="form-inline">
    <select asp-items="@ViewBag.condominios" class="form-control" name="IdBusca">
        <option value="0">Selecione</option>
    </select>
    <input type="submit" value="Buscar" class="btn btn-primary ml-2" />
</form>
<br />
<table class="table">
    <tr>
        <th>Número</th>
        <th>Área Útil</th>
        <th>Condominio</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Numero</td>
            <td>@item.AreaUtil</td>
            <td>@item.Condominio.Nome</td>
        </tr>
    }
</table>

